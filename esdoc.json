{
  "source": "./packages/",
  "destination": "./docs",
  "includes": ["^.*/src/.*\\.js$"],
  "excludes": ["/node_modules/", "/examples/"],
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "accessor": {
          "access": ["public"],
          "autoPrivate": true
        },
        "brand": {
          "title": "js-joda",
          "description": "Immutable date and time library for JavaScript",
          "repository": "https://github.com/js-joda/js-joda"
        },
        "manual": {
          "index": "./packages/core/src/docs/index.md",
          "globalIndex": true,
          "files": [
            "./packages/core/src/docs/getting-started.md",
            "./packages/core/src/docs/usage.md",
            "./packages/core/src/docs/LocalDate.md",
            "./packages/core/src/docs/LocalTime.md",
            "./packages/core/src/docs/LocalDateTime.md",
            "./packages/core/src/docs/ZonedDateTime.md",
            "./packages/core/src/docs/Period.md",
            "./packages/core/src/docs/Duration.md",
            "./packages/core/src/docs/formatting.md",
            "./packages/core/src/docs/customizing.md"
          ]
        }
      }
    }
  ]
}
